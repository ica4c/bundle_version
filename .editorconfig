[*]
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
charset                  = utf-8
tab_width                = 4

[*.php]
max_line_length=100
indent_size              = 4
indent_style             = space

[*.md]
indent_style             = space
max_line_length          = 80

[COMMIT_EDITMSG]
indent_size              = 4
indent_style             = space
max_line_length          = 80

[*.patch]
trim_trailing_whitespace = false
